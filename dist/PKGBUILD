# Maintainer: Piotr Miller <nwg.piotr@gmail.com>
pkgname=('squarely')
pkgver=0.1
pkgrel=1
pkgdesc="Puzzle game written in Python with Pyglet"
arch=('i686' 'x86_64')
url="https://github.com/nwg-piotr/squarely"
license=('GPL3')
depends=('python>=3.6' 'python-setuptools' 'python-pyglet' 'python-requests' )
optdepends=('avbin7: for compressed sound playback')
source=("https://github.com/nwg-piotr/obhud/raw/master/dist/obhud-0.2.1.tar.gz"
        "https://github.com/nwg-piotr/obhud/raw/master/dist/squarely"
        "https://github.com/nwg-piotr/obhud/raw/master/dist/squarely.svg"
        "https://github.com/nwg-piotr/obhud/raw/master/dist/squarely.desktop")

md5sums=('4f55d17214ca1da63649df51f392e166'
         '89995467e1d46692720d5331b8d444ac'
         '8f3afd928dd1cdbfa5252cf614e392a4'
         '6c9b537c6f32d3047a2b691d8ef600a7')

package() {
  install -D -m 755 squarely \
 	 "$pkgdir"/usr/bin/squarely
  install -D -m 755 squarely.desktop \
 	 "$pkgdir"/usr/share/applications/squarely.desktop
  install -D -m 644 squarely.svg \
 	 "$pkgdir"/usr/share/one-more-cheese/squarely.svg
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}
